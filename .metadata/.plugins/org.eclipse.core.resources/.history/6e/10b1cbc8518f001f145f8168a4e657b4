package ejercicios;

import java.util.Scanner;

public class Ejercicio1Pulido {
	
	/**
	 * Pedir una nota de 0 a 10 y mostrarla de la forma: Insuficiente, 
	 * Suficiente, Bien, Notable y sobresaliente. Si la nota introducida 
	 * no está en el rango mostrar el mensaje “Nota errónea”.
	 * @param args
	 */
	
	public static void main(String[] args) {
		
		// Inicializa una instancia de Scanner para la entrada de teclado
		Scanner entradaTeclado = new Scanner(System.in);
		

		
		// Inicializamos una variable boolean de estado para controlar el bucle
		
		// Ejecutamos el código dentro de un bucle para asegurarnos de que en
		// caso de que haya algún error y la entrada de teclado sea incorrecta,
		// el algoritmo se vuelva a repetir hasta que nos proporcionen una
		// entrada válida.
		pideUnaNota(entradaTeclado);
		
		
		// Cerramos la entrada de teclado y damos por terminado el programa
		entradaTeclado.close();
		
	}
	
	private static void pideUnaNota(Scanner entradaTeclado) {
		try {
			// Pedir nota por consola
			System.out.println("Introduce una nota entre 0 y 10: ");
			
			int nota = entradaTeclado.nextInt();
			procesarNota(nota);
			entradaTeclado.close();
		} catch (Exception e) {
			System.out.println("Tenemos un error: " + e);
			entradaTeclado.nextLine();
			entradaTeclado.close();
			Scanner nuevaEntradaTeclado = new Scanner(System.in);
			pideUnaNota(nuevaEntradaTeclado);
		}
	}
	
	private static void verificaUnaNota(int nota) {
		
	}
	
	private static void procesarNota(int nota) {
		
		// Procesamos la nota con una estructura switch
		switch (nota) {
			case 0:
				System.out.println("Insuficiente");
				break;
			case 1:
				System.out.println("Insuficiente");
				break;
			case 2:
				System.out.println("Insuficiente");
				break;
			case 3:
				System.out.println("Insuficiente");
				break;
			case 4:
				System.out.println("Insuficiente");
				break;
			case 5:
				System.out.println("Suficiente");
				break;
			case 6:
				System.out.println("Bien");
				break;
			case 7:
				System.out.println("Notable");
				break;
			case 8:
				System.out.println("Notable");
				break;
			case 9:
				System.out.println("Sobresaliente");
				break;
			case 10:
				System.out.println("Sobresaliente");
				break;
			default:
				System.out.println("Número incorrecto.");
				break;
		}
		
	}

}
